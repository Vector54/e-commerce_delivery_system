<%= form_with model: @order, url: "/shipping_companies/#{@id}/order" do |form|%>
  <div>
    <%= form.label :pickup_adress, 'Endereço para retirada'%>
    <%= form.text_field :pickup_adress%>
  </div>
  <div>
    <%= form.label :product_code, 'Código do produto'%>
    <%= form.text_field :product_code%>
  </div>
  <div>
    <%= form.label :width, 'Largura'%>
    <%= form.number_field :width%>
    <%= form.label :height, 'Altura'%>
    <%= form.number_field :height%>
    <%= form.label :depth, 'Profundidade'%>
    <%= form.number_field :depth%>
    <%= form.label :weight, 'Peso'%>
    <%= form.number_field :weight%>
  </div>
  <div>
    <%= form.label :delivery_adress, 'Endereço para entrega'%>
    <%= form.text_field :delivery_adress%>
  </div>
  <div>
    <%= form.label :cpf, 'CPF do destinatário'%>
    <%= form.text_field :cpf%>
  </div>
  <div>
    <%= form.label :distance, 'Distância total'%>
    <%= form.text_field :distance%>
  </div>
  <%= form.submit 'Cadastrar'%>
<%end%>